---
import TextButton from "../components/TextButton.astro";
import Default from "../layouts/Default.astro";
import projects from "../data/projects.json";
import { ArrowUpRight } from "lucide-astro";

type Project = {
  name: string;
  description: string;
  icon: string;
  links: Link[];
};
type Link = {
  name: string;
  to: string;
};
---

<Default title="Projects">
  <div class="flex flex-col gap-12 py-12">
    <span class="text-6xl font-bold font-round"
      >here are some <t class="text-lor-teal">projects</t> I've worked on.</span
    >
    <span class="flex flex-row gap-2 items-center h-6"
      >The things I make in my free time. Enjoy!
    </span>
    <div class="flex flex-col gap-4">
      {
        projects.map((project: Project) => (
          <div class="border rounded-3xl p-4 flex flex-col gap-4">
            <span class="flex flex-row gap-4 items-center">
              <img
                class="size-12 p-2 border rounded-lg"
                draggable="false"
                src={project.icon}
              />
              <span class="font-round text-4xl font-extrabold">
                {project.name}
              </span>
            </span>
            <span class="text-lg">{project.description}</span>
            <span class="flex flex-row gap-2 items-center">
              {project.links.map((link: Link) => (
                <a
                  target="_blank"
                  class="border hover:bg-lor-bg-transparent transition flex flex-row gap-1 items-center p-2 rounded-xl"
                  href={link.to}
                >
                  {link.name}
                  <ArrowUpRight />
                </a>
              ))}
            </span>
          </div>
        ))
      }
    </div>
    <span>Plus: A bonus! Some really old stuff from over two years ago!</span>
    <TextButton
      class="border"
      text="Some old past projects"
      to="https://projects.lorenzorogers.com"
    />
  </div>
</Default>
